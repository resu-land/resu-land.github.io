{
    "extends": "./.svelte-kit/tsconfig.json",
    "compilerOptions": {
        "paths": {
            "$lib": ["src/lib"],
            "$lib/*": ["src/lib/*"],
            "$components": ["src/components"],
            "$components/*": ["src/components/*"],
            "$stores": ["src/stores"],
            "$stores/*": ["src/stores/*"],
            "$data": ["src/data"],
            "$data/*": ["src/data/*"]
        },
        "allowJs": true,
        "checkJs": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "sourceMap": true,
        "strict": true
    }
}
